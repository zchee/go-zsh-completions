#
# github.com/bcicen/ctop
#
# ctop - container metric viewer
#
# usage: ctop [options]
#
# options:
#
#   -a    show active containers only
#   -connector string
#         container connector to use (default "docker")
#   -f string
#         filter containers
#   -h    display this help dialog
#   -i    invert default colors
#   -r    reverse container sort order
#   -s string
#         select container sort field
#   -v    output version information and exit
#
# -----------------------------------------------------------------------------

function _ctop() {
  local context curcontext=$curcontext state line ret=1
  declare -A opt_args

  _arguments -C \
    '-a[show active containers only]' \
    '-connector[container connector to use (default "docker")]:string' \
    '-f[filter containers]:string' \
    '-h[display this help dialog]' \
    '-i[invert default colors]' \
    '-r[reverse container sort order]' \
    '-s[select container sort field]:string' \
    '-v[output version information and exit]' \
    && ret=0

  return ret
}

_ctop "$*"

